<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity3">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="451dp"
        android:layout_height="185dp"
        android:layout_marginBottom="145dp"
        app:layout_constraintBottom_toTopOf="@+id/BtnTest1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/image_1" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="37dp"
        android:text="При повороте направо Вы должны уступить дорогу:"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/BtnTest1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="41dp"
        android:backgroundTint="#E3E3E3"
        android:onClick="answer"
        android:text="1. Только велосипедисту"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/BtnTest2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/BtnTest2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="37dp"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="#E3E3E3"
        android:onClick="answer"
        android:text="2. Только пешеходам"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/BtnTest3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BtnTest1" />

    <Button
        android:id="@+id/BtnTest3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="37dp"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="43dp"
        android:backgroundTint="#E3E3E3"
        android:onClick="answertry"
        android:text="3. Велосипедисту и пешеходам"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/BtnTest4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BtnTest2" />

    <Button
        android:id="@+id/BtnTest4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="37dp"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="118dp"
        android:backgroundTint="#E3E3E3"
        android:onClick="answer"
        android:text="4. Никому"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BtnTest3" />
</androidx.constraintlayout.widget.ConstraintLayout>